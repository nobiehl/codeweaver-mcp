{
  "name": "codeweaver-mcp",
  "version": "0.4.0",
  "description": "Token-efficient MCP server for multi-language code analysis (Java, TypeScript, JavaScript, Markdown, Python) with semantic search and system health checks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist .mcp-cache",
    "prepare": "npm run build",
    "validate-links": "tsx scripts/validate-links.ts",
    "validate-links:external": "tsx scripts/validate-links.ts --external",
    "validate-links:verbose": "tsx scripts/validate-links.ts --verbose"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "semantic-search",
    "vector-search",
    "code-analysis",
    "java",
    "gradle",
    "lancedb",
    "onnx",
    "static-analysis",
    "code-indexing",
    "refactoring",
    "file-watcher"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nobiehl/codeweaver-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/nobiehl/codeweaver-mcp/issues"
  },
  "homepage": "https://github.com/nobiehl/codeweaver-mcp#readme",
  "author": "nobiehl",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "codeweaver": "dist/index.js",
    "codeweaver-mcp": "dist/mcp/index.js"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.12.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "fast-xml-parser": "^4.5.0",
    "java-parser": "^2.3.0",
    "ora": "^8.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "simple-git": "^3.27.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tree-sitter-wasms": "^0.1.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "web-tree-sitter": "^0.25.10"
  }
}
