{
  "name": "java-analysis-mcp-server",
  "version": "0.1.0",
  "description": "Token-efficient MCP server for Java 21/Gradle project analysis with multi-agent parallelization",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist .mcp-cache",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "java",
    "gradle",
    "static-analysis",
    "code-indexing",
    "refactoring"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "codeweaver": "dist/index.js",
    "codeweaver-mcp": "dist/mcp/index.js"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.12.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@xenova/transformers": "^2.17.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "fast-xml-parser": "^4.5.0",
    "java-parser": "^2.3.0",
    "ora": "^8.0.1",
    "simple-git": "^3.27.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
